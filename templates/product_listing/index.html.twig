{% extends 'base.html.twig' %}

{% block title %}ProductListing index{% endblock %}

{% block body %}
    <h1>ProductListing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_listing in product_listings %}
            <tr>
                <td>{{ product_listing.id }}</td>
                <td>{{ product_listing.ProductNumber }}</td>
                <td>
                    <a href="{{ path('product_listing_show', {'id': product_listing.id}) }}">show</a>
                    <a href="{{ path('product_listing_edit', {'id': product_listing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_listing_new') }}">Create new</a>
{% endblock %}
