{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="{{ path('index') }}">VIRwrm</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mr-auto">
                {%  if app.user %}
                    <li {% if app.request.attributes.get('_route') == 'orders_index' %}class="nav-item active"{% endif %}><a class="nav-link" href="{{ path('orders_index') }}">Etat du parc</a></li>
                    <li {% if app.request.attributes.get('_route') == 'orders_new' %}class="nav-item active"{% endif %}><a class="nav-link" href="{{ path('orders_new') }}">Nouvelle Entrée</a></li>


                {% endif %}
            </ul>

            <ul class="navbar-nav align-items-md-end">
                <li class="nav-item">
                    {%  if app.user %}
                        <a class="nav-link" href="{{ path('logout') }}">Déconnexion</a>
                    {%  else %}
                        <a class="nav-link" href="{{ path('login') }}">Connexion</a>
                    {% endif %}
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}