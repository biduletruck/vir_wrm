{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <h1>Users index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Email</th>
                <th>Username</th>
                <th>Password</th>
                <th>Roles</th>
                <th>Account</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.LastName }}</td>
                <td>{{ user.FirstName }}</td>
                <td>{{ user.Email }}</td>
                <td>{{ user.Username }}</td>
                <td>{{ user.Password }}</td>
                <td>{{ user.Roles ? user.Roles|json_encode : '' }}</td>
                <td>{{ user.Account ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('users_show', {'id': user.id}) }}">Show</a>
                    <a href="{{ path('users_edit', {'id': user.id}) }}">Edit</a>
                    <a href="{{ path('users_reset_password', {'id': user.id}) }}">Reset</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('users_new') }}">Create new</a>
{% endblock %}
